<h1>Edit <%= @landmark.name %></h1>

<form action="/landmarks/<%= @landmark.id %>" method='post' />
  <input type="hidden" name="_method" value="patch" />

  <label>Name:</label>

    <input type="text" name="landmark[name]" id="landmark_name" value="<%= @landmark.name %>"/>

  <label>Year Completed:</label>

    <input type="number" name="landmark[year_completed]" id="landmark_year_completed" value="<%= @landmark.year_completed %>"/>



<button type="submit">Edit Landmark</button>

</form>
